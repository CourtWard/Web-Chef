@model RecipeBuilder.ViewModels.CookbooksEditVM

@{
    ViewData["Title"] = "Edit Cookbook";
}

<div class="text-center">
    <h2 class="display-4">Edit Cookbook</h2>
</div>
@*<form asp-action="" method="post"> *need to know which controller is used*@
<div class="form-group">
    <label for="Name">Cookbook Name:</label>
    <input type="text" class="form-control" id="Name" name="Name" required />
</div>

<div class="form-group">
    <label for="Tags">Tags:</label>
    <input type="text" class="form-control" id="Tags" name="Tags" />
</div>

<div class="form-group">
    <label for="Description">Description:</label>
    <textarea class="form-control" id="Description" name="Description" required></textarea>
</div>

@if (@Model.cookbookName != null)
{
    <div class="form-group">
        <label>Recipes Added:</label>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@Model.recipe.Name</h5>
                <p>Work in progress</p>
                <p class="card-text">@Model.recipe.Difficulty</p>
                @*Need format to remove recipe*@
            </div>
        </div>
    </div>
}
<div class="form-group">
    <label for="AddedRecipes">Add Recipes:</label>
    <a asp-controller="Recipe" asp-action="Select">Select Recipe</a>
</div>
<button type="submit" class="btn btn-success">Save Cookbook</button>
@*</form>*@