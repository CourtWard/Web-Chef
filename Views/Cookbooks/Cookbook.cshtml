@model RecipeBuilder.ViewModels.CookbooksCookbookVM

@{
    ViewData["Title"] = @Model.cookbook.Title;
}

<style>
    body {
        hr.rounded {
        border-top: 8px solid #96AE6D;
        border-radius: 5px;
        }

    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #4A743E;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        transition: background-color 0.3s ease;
        }

    .btn-primary:hover {
        background-color: #96AE6D;
        }
    .block {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 20px;
        justify-content: center;
        background-color: #F5F5F5;
        border-radius: 5px;
        width: 100%;
        max-width: 300px;
        padding: 10px;
        text-align: center;
        }
    }
</style>
<body>
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex" style= "width: 120px;">
    </div>
    <h2 class="text-center flex-grow-1 display-4" style="margin: 0; color: #4A743E;">@Model.cookbook.Title Cookbook</h2>
    <hr class="rounded">
    <a asp-controller="Cookbooks" asp-action=Edit asp-route-cookbookName=@Model.cookbook.Title class="btn btn-primary">Edit Cookbook</a>
</div>

<div class="text-center">
    @*<form asp-action="" method="get" class="form-inline mb-3"> * need to know which model to pull from for search*@
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Recipes..." name="searchTerm" value="@ViewData["CurrentFilter"]" />
    </div><br>
    <button type="submit" class="btn btn-primary ml-2">Search</button>
    @*</form>*@
</div><br>

<div class="row">
    @if (Model.cookbook.Recipes !=null && Model.cookbook.Recipes.Any())
    {
        @foreach (var recipe in Model.cookbook.Recipes)
        {
            <div>
                <div class="col-md-4">
                    <div class="block">
                        <div class="col-md-6">
                        <h5 style="color: #4A743E;">@recipe.Name</h5>
                        </div>
                        <div class="col-md-6">
                        <h5 style="color: #4A743E;">delete</h5>
                        </div>
                        <div class="button-container">
                            <a asp-controller="Recipe" asp-action=Look asp-route-cookbookName=@Model.cookbook.Title asp-route-recipeName=@recipe.Name class="btn btn-primary">View</a>
                        </div>
                        <form method="post" asp-controller="Cookbooks" asp-action="RemoveRecipe">
                                <input type="hidden" name="cookbookTitle" value="@recipe.Name"/>
                                <input type="hidden" name="cookbookTitle" value="@Model.cookbook.Title"/>
                                <div class="button-container">
                                    <button type="submit">Remove Recipe</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Recipes Found.</p>
    }
</div>
</body>
