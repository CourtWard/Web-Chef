@{ 
    ViewData["Title"] = "Monthly Meal Planner"; 
}
<!-- styling for page -->
<style>
    h1 {
        color: #4A743E;
        text-align: center;
        margin-top: 0;
        padding-top: 0;
    }

    body {
        background-color: #ffffff; 
        color: #333; 
        margin: 0;
        padding: 0; 
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0; 
    }

    hr.rounded {
        border-top: 8px solid #96AE6D;
        border-radius: 5px;
        width: 80%;
        margin: 0 auto;
        margin-top: 10px; 
    }

    /* Button styles */
    .button {
        background-color: #4A743E;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .button:hover {
        background-color: #96AE6D;
    }

    .schedule {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 20px;
        justify-content: center;
    }

    .week {
        background-color: #F5F5F5;
        border-radius: 5px;
        width: 100%;
        max-width: 300px;
        padding: 10px;
        text-align: center;
    }

    .schedule-title {
        font-size: 1.5em;
        margin: 10px 0;
        color: #4A743E;
    }

    .button-container {
        margin-bottom: 40px;
        text-align: center; 
    }

</style>

<body>
    <div class="container">
        <h1 class="display-4">Monthly Meal Planner</h1>
        <hr class="rounded">
        <br>
        <div class="button-container">
            <a asp-controller="MealPlanner" asp-action="Plan" class="button">Meal Schedule</a>
        </div>
        
        <div class="schedule">
            <div class="week">
                <h2 class="schedule-title">Week 1</h2>
                <p>Spaghetti Bolognese</p>
                <p>Garlic Bread</p>
            </div>
            <div class="week">
                <h2 class="schedule-title">Week 2</h2>
                <p>Spaghetti Bolognese</p>
                <p>Garlic Bread</p>
            </div>
            <div class="week">
                <h2 class="schedule-title">Week 3</h2>
                <p>Spaghetti Bolognese</p>
                <p>Garlic Bread</p>
            </div>
            <div class="week">
                <h2 class="schedule-title">Week 4</h2>
                <p>Spaghetti Bolognese</p>
                <p>Garlic Bread</p>
            </div>
            <div class="week">
                <h2 class="schedule-title">Week 5</h2>
                <p>Spaghetti Bolognese</p>
                <p>Garlic Bread</p>
            </div>
        </div>
    </div>
</body>
