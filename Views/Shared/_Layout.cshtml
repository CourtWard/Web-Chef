<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Chef</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/recipe_builder.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web Chef</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
			            </li>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="Cookbooks" asp-action="Index">Cookbooks</a>
			            </li>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="Ingredients" asp-action="Index">Ingredients</a>
			            </li>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="Meals" asp-action="Index">Meals</a>
			            </li>
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="cookbookDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Meal Planner
                                <i class="fa fa-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="cookbookDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MealPlanner" asp-action="Index" asp-route-date="@DateOnly.FromDateTime(DateTime.Now)">Meal Schedule</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MealPlanner" asp-action="Daily" asp-route-date="@DateOnly.FromDateTime(DateTime.Now)">Today's Schedule</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MealPlanner" asp-action="Week" asp-route-date="@DateOnly.FromDateTime(DateTime.Now)">This Week</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="MealPlanner" asp-action="Month" asp-route-date="@DateOnly.FromDateTime(DateTime.Now)">This Month</a>
                                </li>
                            </ul>
                        </div>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingList" asp-action="Index">Shopping List</a>
			            </li>
                        <li class="nav-item">
				            <a class="nav-link text-dark" asp-area="" asp-controller="Pantry" asp-action="Index">Pantry</a>
			            </li>
                    </ul>
                </div>
                <div class="button-container" id="button">
                    <a href="@Url.Action("Index", "Home")">Log Out</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - recipe_builder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
