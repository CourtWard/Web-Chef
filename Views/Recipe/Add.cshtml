@model RecipeBuilder.ViewModels.RecipeAddVM
@{
    ViewData["Title"] = "Add Recipe";
}

<style>
    /* styling for the header */
    h1 {
        color: #4A743E;
    }

    /* button styling */
    .btn-custom {
        background-color: #4A743E;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #96AE6D;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Create Recipe</h1>
</div>
<div class="">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="recipe.Name" class="control-label">Recipe Name:</label>
            <input asp-for="recipe.Name" class="form-control" /><br>
            <span asp-validation-for="recipe.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="recipe.Tags">Tags:</label>
            <input asp-for="recipe.Tags" class="form-control" /><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.Difficulty">Difficulty:</label>
            <textarea asp-for="recipe.Difficulty" class="form-control"></textarea><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.Ingredients">Ingredients:</label>
            <textarea asp-for="recipe.Ingredients" class="form-control"></textarea><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.numServings">Number of Servings:</label>
            <input asp-for="recipe.numServings" class="form-control"/><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.servingSize">Serving Size:</label>
            <input asp-for="recipe.servingSize" class="form-control"/><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.Equipment">Tools/Equipment Needed:</label>
            <textarea asp-for="recipe.Equipment" class="form-control"></textarea><br>
        </div>
        <div class="form-group">
            <label asp-for="recipe.Instructions">Instructions:</label>
            <textarea asp-for="recipe.Instructions" class="form-control"></textarea><br>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-custom">Submit</button>
        </div>
    </form>
</div>

