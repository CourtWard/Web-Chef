@model RecipeBuilder.ViewModels.RecipeLookVM

@{
    ViewData["Title"] = @Model.recipe.Name;
}

<div class="container">
    <div class ="row mb-3">
        <div class="col-md-4 d-flex align-items-center">
            <a asp-controller="Recipe" asp-action="Edit" asp-route-recipeName=@Model.recipe.Name>Edit Recipe</a>
        </div>
        <div class="col-md-8 text-center">
            <h1 class="display-4" style="margin: 0;">Recipe: @Model.recipe.Name</h1><br>
            <p>@Model.recipe.Description</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4>Tags:</h4>
            <ul>
                @if (@Model.recipe.Tags !=  null && @Model.recipe.Tags.Any())
                {
                    @foreach (var tag in @Model.recipe.Tags)
                    {
                        <li>
                            @tag
                        </li>
                        <br>
                    }
                }
            </ul>
            <h4>Prep Time:</h4>
            <ul>
                <li>@Model.recipe.PrepTime minutes</li>
            </ul>
            <h4>Cook Time:</h4>
            <ul>
                <li>@Model.recipe.CookTime minutes</li>
            </ul>
            <h4>Rating:</h4>
            <ul>
                <li>@Model.recipe.Rating</li>
            </ul>
            <h4>Difficulty:</h4>
            <ul>
                <li>@Model.recipe.Difficulty</li>
            </ul>
            <h4>Number of Servings:</h4>
            <ul>
                <li>@Model.recipe.numServings</li>
            </ul>
            <h4>Serving Size:</h4>
            <ul>
                <li>@Model.recipe.servingSize</li>
            </ul>
            <h4>Tools/Equipment:</h4>
            <ul>
                @if (@Model.recipe.Equipment !=  null && @Model.recipe.Equipment.Any())
                {
                    @foreach (var tool in @Model.recipe.Equipment)
                    {
                        <li>
                            @tool
                        </li>
                        <br>
                    }
                }
            </ul>
            <h4>Ingredients:</h4>
            <ul>
                @if (@Model.recipe.Ingredients !=  null)
                {
                    @foreach (var ing in @Model.recipe.Ingredients)
                    {
                        <li>
                            @ing.Quantity @ing.Unit @ing.Qualifier @ing.Ingredient.Name
                            <button class="add-to-cart-btn" onclick="addToCart('@ing.Ingredient.Name',this)">Add to Cart</button>
                        </li>
                        <br>
                    }
                }
            </ul>
        </div>
        <div class="col-md-8">
            <h4>Instructions:</h4>
            <ul>
                @if (@Model.recipe.Instructions !=  null)
                {
                    @foreach (var inst in @Model.recipe.Instructions)
                    {
                        <li>@inst</li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
<script>
    function addToCart(ingName, button){
        if(button.textContent == "Add to Cart"){
            button.textContent = "Added";
            //code needed to add to shopping list
        } else{
            button.textContent = "Add to Cart";
            //code needed to remove from shopping list
        }
    }
</script>
<style>
    .add-to-cart-btn {
        color: white;
        background-color: #4A743E;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        transition: background-color 0.3s ease;
    }
    .add-to-cart-btn:hover{
        background-color: #96AE6D;
    }
</style>
