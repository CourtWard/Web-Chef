@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
    ViewData["Title"] = "Log In";
}

@model RecipeBuilder.Models.LoginModel?

<!-- button styling -->
<head>
    <style>
        h1 {
            color: #4A743E;
            text-align: center;
            margin-top: 0; /* Remove top margin */
            padding-top: 0; /* Remove top padding */
        }

        /* New style for h2 */
        .schedule-title {
            font-size: 1.5em;
            margin: 10px 0;
            color: #4A743E;
            text-align: left; /* Align text to the left */
        }

        body {
            background-color: #ffffff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0;
        }

        #button a {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #4A743E;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            transition: background-color 0.3s ease;
        }

        #button a:hover {
            background-color: #96AE6D;
        }

        /* to make buttons side by side */
        .button-container {
            display: inline-block;
            margin: 0 10px;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Log In</h1> <!-- Title -->
            <form method="post" asp-controller="Account" asp-action="Login" id="form">
                <div class="form-group">
                    <h2 class="schedule-title">Username</h2> <!-- Title styled similar to h2 -->
                    <input type="text" asp-for="Username" class="form-control" id="username" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <h2 class="schedule-title">Password</h2> <!-- Title styled similar to h2 -->
                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <a asp-controller="Account" asp-action="Create">Create Account</a>
                    <div class="button-container" id="button">
                        <a href="#" onclick="document.getElementById('form').submit();">Sign In</a> <!-- Sign In button -->
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        @if (Model != null)
        {
            @if (Model.msg != "")
            {
            <p>@Model.msg</p>
            }
        }
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
