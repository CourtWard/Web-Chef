@model RecipeBuilder.ViewModels.PantryIndexVM

@{
    ViewData["Title"] = "Pantry";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pantry</title>

    <style>
        #pantryContainer {
            background-color: #F4F3EC; 
            padding: 20px;
            border-radius: 10px;
            max-width: 900px;
            margin: auto; 
        }

        .text-center h1 {
            color: #4A743E;
        }

        /* scoped bulleted list for pantry items inside #pantryContainer */
        #pantryContainer ul {
            list-style-type: disc; 
            padding-left: 20px; 
            color: #4A743E; 
        }

        #pantryContainer ul li {
            margin: 10px 0; 
        }

        /* scoped link styling within #pantryContainer */
        #pantryContainer a {
            margin-left: 10px;
            text-decoration: none; 
            color: #96AE6D; 
        }

        #pantryContainer a:hover {
            text-decoration: underline;
        }
    </style>
    <script>
        // remove an item from the pantry list
        function removeItem(event) {
            const item = event.target.closest('li'); // get closest list item
            if (item) {
                item.remove(); // remove item from the DOM
            }
        }
    </script>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Pantry</h1>
        <br>
    </div>

    <div id="pantryContainer">
        <br>
        <ul>
            <!-- dynamic list generated from PantryIndexVM model -->
            @foreach (var item in Model.items)
            {
                <li>
                    @item.Name 
                    <a asp-controller="ShoppingList" asp-action="AddItemToShoppingList" asp-route-itemName="@item.Name">Add Item To Shopping List</a>
                    <a href="#" onclick="removeItem(event)">Remove</a>
                </li>
            }
        </ul>
    </div>
</body>
</html>
